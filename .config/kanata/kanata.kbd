
(defcfg
  process-unmapped-keys yes
  tap-time 120
  hold-time 200
)

(defsrc
  caps a s d f j k l ;
)

(deflayer base
  ;; caps: esc when tapped, ctrl when held
  (tap-hold 120 200 esc lctl) 

  ;; home row mods
  (tap-hold 120 200 a lshift)
  (tap-hold 120 200 s lalt)
  ;; lmeta => cmd in mac , super in linux
  (tap-hold 120 200 d lmeta)
  (tap-hold 120 200 f lctl)

  (tap-hold 120 200 j lctl)
  (tap-hold 120 200 k lmeta)
  (tap-hold 120 200 l lalt)
  (tap-hold 120 200 ; lshift)
)
